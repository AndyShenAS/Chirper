<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.chirps.any? %>
      <h3>Chirps (<%= @user.chirps.count %>)</h3>
      <ol class="chirps">
        <%= render @chirps %>
      </ol>
      <%= will_paginate @chirps %>
    <% end %>
  </div>
</div>
